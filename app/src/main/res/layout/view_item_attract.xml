<?xml version="1.0" encoding="utf-8"?>
<com.example.mkt.padcexercise5.views.items.ViewItemAttract
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    card_view:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_myanmarattraction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="Bagan"
            />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/margin_medium"
            android:adjustViewBounds="true"
            android:src="@drawable/sample_photo"/>

        <TextView
            android:id="@+id/tv_myanmarattraction_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textAppearance="?android:textAppearanceSmall"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginTop="@dimen/margin_medium"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="Bagan, the capital of Myanmarâ€™s first dynasty, was built by King Anawrahta in 1044. It is located about 193 km south of Mandalay. There are over 2000 temples and stupas spreading in 42 square kilometers of desert like plain on the eastern bank of the Ayeyarwaddy River. All those red bricks and stucco religious monuments were built during 11th to 13th century. The magnificent temple architecture, incredibly fine mural or frescos paintings, brilliant stucco carvings, and the most elegant Buddha images, all are telling motifs of the sublime culture of the ancient Bagan dynasties."
            />

    </LinearLayout>

</com.example.mkt.padcexercise5.views.items.ViewItemAttract>